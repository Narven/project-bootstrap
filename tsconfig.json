{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noEmitOnError": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": false
  },
  "lib": [
    "dom",
    "es2017",
    "dom.iterable",
    "scripthost"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "config",
    "release",
    "build"
  ],
  "include": [
    "src/*"
  ]
}
